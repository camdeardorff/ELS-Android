<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_inventory_configurator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.els.button.Controllers.InventoryConfigurator"
    tools:showIn="@layout/activity_inventory_configurator"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/activity_inventory_configurator_textfield_iid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryID"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/activity_inventory_configurator_iid_textview"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/activity_inventory_configurator_textfield_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryPIN"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/activity_inventory_configurator_pin_textview"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/activity_inventory_configurator_button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_inventory_configurator_button_done"
            android:layout_weight="1" />

        <Button
            android:text="@string/activity_inventory_configurator_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_inventory_configurator_button_cancel"
            android:layout_weight="1" />

    </LinearLayout>



</LinearLayout>
